.title-container
    display flex
    flex-direction column
    gap 5px
.task-title-main
    background none
    width 100%
    height 50px
    max-height 50px
    max-width 578px
    border-color #BFDAEB
    border-radius 5px
    border-style solid
    border-width 2px
    padding-left  19px
    font-family Gilroy_SemiBold
    font-size 15px
    color #283848
    outline none
    box-sizing border-box
    &:focus
        border-color #2693FF
        outline none

.title-legend
    font-family Gilroy_SemiBold
    font-size 14px
    color #4E657B
