.MainHeader
    background-color #FFF
    max-width: 4000px
    width 100%
    max-height 83px
    height: 10%
    display flex
    flex-direction column
    font-family Gilroy_Bold
    align-items flex-end
    justify-content center
    box-shadow: 0px 1px 6px rgba(40, 56, 72, 0.07);

    .ProfileBlock
        max-height 55px
        display flex
        flex-direction row
        font-family Gilroy_SemiBold
        gap 10px
        position fixed
        margin-right 33px
        .profile-pic
            width 100%
            max-width 47px
            max-height 47px
            border-radius 50%
        .profile-infos
            display flex
            flex-direction column
            position relative
            .name
                position relative
                top 15%
                color #283848
                font-size 15px
            .role
                position relative
                top -20%
                color #2693FF
                font-size 12px