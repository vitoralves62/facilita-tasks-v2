.desc-container
    display flex
    flex-direction column
    gap 5px

.task-desc-main
    background none
    width 100%
    height 100rem
    max-height 183px
    max-width 578px
    border-color #BFDAEB
    border-radius 5px
    border-style solid
    border-width 2px
    padding-left  18px
    padding-top 26px
    padding-right 18px
    font-family Gilroy_SemiBold
    font-size 15px
    color #283848
    outline none
    box-sizing border-box
    resize: none
    &:focus
        border-color #2693FF
        outline none

.desc-legend
    font-family Gilroy_SemiBold
    font-size 14px
    color #4E657B