.CategoriesBlock
    background-color: #F4FBFF
    width 17vw
    max-width: 227px
    height: 100%
    display flex
    flex-direction column
    align-items left
    justify-content center
    box-shadow: 0px 1px 10px rgba(40, 56, 72, 0.06)

    p
        font-size 17px
        color #4E5F70
        margin-left 40px
        font-family Gilroy_Bold

    nav
        width 100%
        margin-top 23px
        ul
            list-style-type none
            padding 0
            margin 0
            width 100%
            li
                display flex
                position relative
                align-items center
                margin-bottom 10px
                margin-left 40px

                button
                    background none
                    font-family Gilroy_SemiBold
                    border none
                    font-size 15px
                    color #283848
                    text-align left
                    width 100%
                    padding 3px 0      
                    display inline-flex
                    align-items center
                    &:hover
                        cursor pointer
                        color #2693FF
                    svg
                        margin-right 12.2px
                        fill #283848
                        &:hover svg path
                            fill #2693FF !important

                .urgent,
                .important,
                .normal,
                .completed
                    width 20px
                    height 20px
                    display flex
                    align-items center
                    justify-content center
                    border-radius 50%
                    font-size 11px
                    color #FFF
                    margin-left 10px
                    padding-top 3px
                    padding-right 3px
                    padding-left 2px
                    padding-bottom 2px
                    font-family Gilroy_Bold
                    
                .urgent
                    background-color #FF2E79
                    
                .important
                    background-color #FFC42E
                .normal
                    background-color #6e85f7
                .completed
                    background-color #0ED984
                    
