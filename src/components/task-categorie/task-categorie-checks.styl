.categories-container
  display flex
  flex-direction row
  gap 11px
  font-family Gilroy_SemiBold
  font-size 14px
  color #4E657B

.category-container
  display flex
  flex-direction row
  align-items center
  justify-content center
  gap 9px

.urgent-check, .important-check, .no-category-check
  appearance none
  border 2px solid #BFDAEB
  border-radius 50%
  width 24px
  height 24px
  display inline-block
  position relative
  cursor pointer

  &:checked::before
    content ''
    display block
    border-radius 50%
    width 10px
    height 10px
    background-color #1E90FF // Blue color for the selected state
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.category-text
  cursor pointer